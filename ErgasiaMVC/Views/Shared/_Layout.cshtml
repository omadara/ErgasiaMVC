<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Book Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-custom navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" class="navbar-brand"><span class="glyphicon glyphicon-book"></span> Book Store</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Table<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Authors", "Index", "Authors")</li>
                            <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                            <li>@Html.ActionLink("Publishers", "Index", "Publishers")</li>
                            <li>@Html.ActionLink("Sales", "Index", "Sales")</li>
                            <li>@Html.ActionLink("Stores", "Index", "Stores")</li>
                            <li>@Html.ActionLink("Titles", "Index", "Titles")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Report<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Top Authors", "Index", "TopAuthorsReport")</li>
                            <li>@Html.ActionLink("Sales Report", "Index", "SalesReport")</li>
                        </ul>
                    </li>
                    @if (Session["is_admin"] != null)
                    {
                        <li>@Html.ActionLink("Database", "Index", "Database")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Database", "Index", "Login", new { modal = true }, new { data_target = "#modal-container", data_toggle = "modal" })</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="https://github.com/omadara/ErgasiaMVC/">Omadara@github</a></p>
        </footer>
    </div>

    <div id="modal-container" class="modal fade hidden-print" tabindex="-1" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script type="text/javascript">
        $(function () {
            // when the modal is closed
            $('#modal-container').on('hidden.bs.modal', function () {
                console.log("modal closed");
                // remove the bs.modal data attribute from it
                $(this).removeData('bs.modal');
                // and empty the modal-content element
                $('#modal-container .modal-content').empty();
            });
        });
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    @if (Request["Login_Error"] != null)
    {
        <script type="text/javascript">
            $('#modal-container').modal({ remote: 'Login?modal=true&Login_Error=true' });
            $('#modal-container').modal('show');
        </script>
    }
    @RenderSection("scripts", required: false)
</body>
</html>
